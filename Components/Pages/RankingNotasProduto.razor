@page "/ranking"
@using IfroAlimenta.Models
@using IfroAlimenta.Contexto
@inject ContextoBD _context

<h3>Ranking dos Produtos por Nota</h3>

@if (produtos != null && produtos.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Nota</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produto in produtos)
            {
                <tr>
                    <td>@produto.Nome</td>
                    <td>@produto.Descricao</td>
                    <td>@produto.Nota</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nenhum produto com nota encontrada.</p>
}

@code {
    private List<Produto>? produtos;

    protected override void OnInitialized()
    {
        produtos = _context.Produtos
            .Where(p => p.Nota.HasValue)
            .OrderByDescending(p => p.Nota)
            .ToList();
    }
}
