@page "/"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IfroAlimenta</title>

    <!-- Inclua o Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet">

    <!-- Outras referências CSS (se houver) -->
    <style>
        /* Certifique-se de que o body e html ocupem 100% da altura */
        html, body {
            height: 100%;
            margin: 0;
        }

        /* Estilo para a imagem ocupar toda a tela */
        .full-screen-img {
            width: 100vw; /* Largura da tela inteira */
            height: 100vh; /* Altura da tela inteira */
            object-fit: cover; /* Mantém a proporção e cobre o espaço sem distorcer */
            display: block;
            margin: 0;
        }

        /* Ajuste do contêiner para centralizar a imagem */
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Altura da tela inteira */
        }
    </style>
</head>
<body>
    <h1>Bem Vindo(a)!</h1>
    <div class="container">
        <img src="/robos.png" alt="Logo" class="full-screen-img">
    </div>
</body>
</html>

